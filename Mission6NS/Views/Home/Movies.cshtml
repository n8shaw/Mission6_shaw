@{
}
@model MovieRating

<!--form to input new movies linked to MovieRating model to import to database-->

<form method="post">

    <label asp-for="Title">Movie Title</label>
    <input asp-for="Title" />
    <br />
    <label asp-for="Category">Movie Category</label>
    <input asp-for="Category" />
    <br />
    <label asp-for="StartYear">Start Year</label>
    <input asp-for="StartYear" />
    <br />
    <label asp-for="EndYear">End Year</label>
    <input asp-for="EndYear" />
    <br />
    <label asp-for="Director">Director(s)</label>
    <input asp-for="Director" />
    <br />
    <label asp-for="Rating">Movie Rating</label>
    <select asp-for="Rating">
        <option value="NR">NR</option>
        <option value="UR">UR</option>
        <option value="R">R</option>
        <option value="PG-13">PG-13</option>
        <option value="PG">PG</option>
        <option value="G">G</option>
        <option value="TV-14">TV-14</option>
        <option value="TV-PG">TV-PG</option>
        <option value="TV-Y7">TV-Y7</option>
    </select>
    <label asp-for="Edited">Edited</label>
    <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>

    </select>
    <br />
    <label asp-for="LentTo">Lent To</label>
    <input asp-for="LentTo" />
    <br />
    <label asp-for="Notes">Notes</label>
    <input asp-for="Notes" />
    <br />


    <button type="submit">Add Movie</button>



</form>