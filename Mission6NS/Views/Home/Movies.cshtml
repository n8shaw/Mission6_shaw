@{
}
@model MovieRating

<!--form to input new movies linked to MovieRating model to import to database-->

<form method="post">

    <input type="hidden" asp-for="MovieId" />
    <label asp-for="Title">Movie Title</label>
    <input asp-for="Title" />
    <br />
    <select asp-for="CategoryId">
        <option value="">Select a Category</option>
        @foreach (Category m in ViewBag.Categories)//Looping through all the categores and making options in a dropdown
        {
            <option value="@m.CategoryId">@m.CategoryName</option>
        }
    </select>
    <br />
    
    <label asp-for="Year">Year</label>
    <input asp-for="Year" />
    <br />
    <label asp-for="Director">Director(s)</label>
    <input asp-for="Director" />
    <br />
    <label asp-for="Rating">Movie Rating</label>
    <select asp-for="Rating">
        <option value="">Select Rating</option>
        <option value="NR">NR</option>
        <option value="UR">UR</option>
        <option value="R">R</option>
        <option value="PG-13">PG-13</option>
        <option value="PG">PG</option>
        <option value="G">G</option>
        <option value="TV-14">TV-14</option>
        <option value="TV-PG">TV-PG</option>
        <option value="TV-Y7">TV-Y7</option>
    </select>
    <br />
    <label asp-for="Edited">Edited</label>
    <select asp-for="Edited">
        <option value="" selected>Select an option</option>
        <option value="1">Yes</option>
        <option value="0">No</option>

    </select>
    <br />
    <label asp-for="LentTo">Lent To</label>
    <input asp-for="LentTo" />
    <br />
    <label asp-for="CopiedToPlex">Copied To Plex</label>
    <select asp-for="CopiedToPlex">
        <option value="" selected>Select an option</option>
        <option value="1">Yes</option>
        <option value="0">No</option>
    </select>
    <br/>
    <label asp-for="Notes">Notes</label>
    <input asp-for="Notes" />
    <br />


    <button type="submit">Add Movie</button>

    <div asp-validation-summary="All"></div>

</form>